@using KaCake.ViewModels.Assignment
@model KaCake.ViewModels.Assignment.TaskGroupViewModel

@{
    ViewData["Title"] = "Create new task group";
}

<h2>Task group creation form</h2>

<form asp-controller="TaskGroup" asp-action="Create" Method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input asp-for="CourseId" />

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>