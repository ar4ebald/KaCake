@using KaCake.ViewModels.TaskVariant
@model KaCake.ViewModels.TaskVariant.TaskVariantViewModel

    @{
        ViewBag.Title = "Create task variant";
    }

    <h2>Create task variant</h2>

<form asp-controller="TaskVariant" asp-action="Create" enctype="multipart/form-data" Method="post" class="form-horizontal">
    <div asp-validation-summary="All" class="text-danger"></div>
        
    <input asp-for="TaskGroupId"/>
    <input name="Id" type="hidden" value="@Model.Id"/>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
        
    <div class="form-group">
        <label asp-for="Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Description" class="form-control" ></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="TesterArchive" class="form-control" />
            <span asp-validation-for="TesterArchive" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
</form>

@section scripts
{
    @Html.Partial("_TinyMCEPartial")
}